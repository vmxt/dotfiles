style "xfdesktop-icon-view"
{
	font_name = "helvetica italic 10"
	fg[NORMAL] = "#FFFFFF"
	XfdesktopIconView::label-alpha = 0
}

style "default-style"
{
   xthickness = 2
   ythickness = 2
   GtkRange::trough_border = 0
   GtkScrollbar::slider_width = 20
   GtkScrollbar::stepper_size = 20
   GtkScale::slider_width = 16
   GtkScale::stepper_size = 5
   GtkComboBox::appears-as-list = 1
   GtkScale::trough_border = 3
   GtkMenuBar::internal_padding = 1
   GtkEntry::inner_border = {5,5,5,5}
   GtkEntry::shadow_type = GTK_SHADOW_NONE
   GtkButton::default_border = {0,0,0,0}
   GtkButton::default_outside_border = {0,0,0,0}
   GtkButton::child_displacement_x = 1
   GtkButton::child_displacement_y = 1
   font_name = "helvetica 9"
   bg[NORMAL]            = "#C1C1C1"
   bg[PRELIGHT]          = "#C1C1C1"
   bg[ACTIVE]            = "#999999"
   bg[INSENSITIVE]       = "#808080"
   bg[SELECTED]          = "#A59F80"
   fg[NORMAL]            = "#000000"
   fg[PRELIGHT]          = "#000000"
   fg[ACTIVE]            = "#000000"
   fg[INSENSITIVE]       = "#999999"
   fg[SELECTED]          = "#000000"
   base[NORMAL]          = "#999999"
   base[PRELIGHT]        = "#C1C1C1"
   base[ACTIVE]          = "#000000"
   base[INSENSITIVE]     = "#C1C1C1"
   base[SELECTED]        = "#FFFF00"
   text[ACTIVE]          = "#999999"
   text[INSENSITIVE]     = "#999999"
   text[NORMAL]          = "#000000"
   text[PRELIGHT]        = "#000000"
   text[SELECTED]        = "#000000"
}
style "button"
{
