style "color-fix-combo"
{
    fg[ACTIVE]           = "#4C4C4C"
    fg[INSENSITIVE]      = "#606060"
    fg[NORMAL]           = "#4C4C4C"
    fg[PRELIGHT]         = "#4C4C4C"
    engine "pixmap" {
	    image {
            state = NORMAL
      		function = ARROW
      		overlay_file = "combo-arrow1.png"
			overlay_border = {2,2,2,2}
			overlay_stretch = FALSE
      		arrow_direction = DOWN
    		   }
	    image {
            state = PRELIGHT
      		function = ARROW
      		overlay_file = "combo-arrow2.png"
      		overlay_stretch = FALSE
      		arrow_direction = DOWN
    		   }
	    image {
            state = ACTIVE
      		function = ARROW
      		overlay_file = "combo-arrow2.png"
      		overlay_stretch = FALSE
      		arrow_direction = DOWN
    		   }
	    image {
            state = INSENSITIVE
      		function = ARROW
      		overlay_file = "combo-arrow2.png"
      		overlay_stretch = FALSE
      		arrow_direction = DOWN
    		   }
}				
